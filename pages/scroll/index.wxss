}

.page-section-title {
  font-size: 28rpx;
  color: #999999;
  margin: 40rpx 0 20rpx;
}

.page-section-spacing {
  margin-top: 60rpx;
}

.scroll-view_H {
  white-space: nowrap;
}

.scroll-view-item_H {
  display: inline-block;
  width: 100%;
  height: 300rpx;
}

.scroll-view-item {
  height: 300rpx;
}

